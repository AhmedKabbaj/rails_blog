<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <% if post.user.name? %> 
    <p> Posted by : <%= link_to post.user.name, user_path(post.user) %> </p>
  <% else %>
    <p> Posted by <%= post.user.email %> : <%= link_to post.user.email, user_path(post.user) %> </p>
  <% end %>
  <p>
    <%= pluralize(post.views, "view") %>
  </p>
  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

</div>
